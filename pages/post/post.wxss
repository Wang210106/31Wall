/* 全局样式 */
.container {
	padding: 0 20rpx;
	padding-bottom: 100px; /* 所有内容与底部留出 100px 空白 */
	background-color: #f5f5f5; /* 页面背景色 */
  }
  
  /* 头像、用户名和发帖时间样式 */
  .user-info {
	display: flex;
	align-items: center;
	margin-top: 30rpx;
  }
  
  .avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
	object-fit: cover;
  }
  
  .username {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
  }
  
  .post-time {
	font-size: 24rpx;
	color: #999;
	margin-left: 10rpx;
  }
  
  /* 所在分区包裹层样式 */
  .partition-wrapper {
	display: flex;
	justify-content: flex-end; /* 让子元素靠右对齐 */
	margin-top: 20rpx;
  }
  
  /* 所在分区样式 */
  .partition {
	font-size: 32rpx;
	font-weight: bold;
	margin-right: 8rpx; /* 设置距离右侧为 8rpx */
	color: #007aff;
  }
  
  /* 标题样式 */
  .title {
	font-size: 48rpx;
	font-weight: bold;
	margin-top: -40rpx;
	color: #333;
	line-height: 1.3;
  }
  
  /* 正文样式 */
  .content {
	font-size: rpx;
	margin-top: 20rpx;
	color: rgb(0, 0, 0);
	line-height: 1.6;
  }
  
  /* 图片九宫格样式 */
  .image-grid {
	display: flex;
	flex-wrap: wrap;
	margin-top: 30rpx;
	margin-left: -5rpx; /* 抵消最左边图片的左外边距 */
	margin-right: -5rpx; /* 抵消最右边图片的右外边距 */
  }
  
  .image-grid image {
	width: 33.33%;
	height: auto;
	box-sizing: border-box;
	padding: 0 5rpx; /* 左右间距保持不变 */
	margin-top: 10rpx; /* 调整图片上方间距 */
	margin-bottom: 10rpx; /* 调整图片下方间距 */
	min-height: 230rpx; /* 添加最小高度 */
	border-radius: 10rpx;
	object-fit: cover;
  }
  
  /* 点赞和评论区样式 */
  .like-comment {
	display: flex;
	margin-top: 30rpx;
	flex-wrap: wrap; /* 允许换行 */
	justify-content: space-around; /* 均匀分布按钮 */
  }
  
  .like,
  .comment {
	display: flex;
	align-items: center;
	margin-right: 20rpx;
	margin-bottom: 10rpx; /* 增加底部间距 */
	cursor: pointer; /* 鼠标指针样式 */
  }
  
  .like image,
  .comment image {
	width: 36rpx;
	height: 36rpx;
	margin-right: 10rpx;
  }
  
  .like text,
  .comment text {
	font-size: 28rpx;
	color: #666;
  }
  
  /* 评论输入框样式 */
  .comment-input {
	margin-top: 30rpx;
  }
  
  .input-full-width {
	width: 100%;
	border: 1rpx solid #ccc;
	height: 80rpx; 

	padding: 20rpx 20rpx; 
	margin-bottom: 15rpx; 
	border-radius: 8rpx;
	font-size: 28rpx; 
	box-sizing: border-box;
  }
  
  .anonymous-switch {
	display: flex;
	width: 100%;
	margin-bottom: 15rpx; /* 选择框与按钮留出间距 */
	align-items: center;
  }
  
  .anonymous-switch radio-group {
	display: flex;
  }
  
  .anonymous-switch label {
	margin-right: 30rpx;
	font-size: 28rpx;
	color: #666;
	display: flex;
	align-items: center;
  }
  
  .anonymous-switch radio {
	margin-right: 10rpx;
  }
  
  .comment-buttons {
	display: flex;
	justify-content: flex-end;
  }
  
  .comment-input button {
	padding: 15rpx 30rpx;
	background-color: #007aff;
	color: #fff;
	border: none;
	border-radius: 8rpx;
	margin-left: 20rpx;
	font-size: 28rpx;
	cursor: pointer;
  }
  
  .comment-input button:active {
	background-color: #0056b3;
  }
  
  /* 评论列表样式 */
  .comment-list {
	margin-top: 30rpx;
  }
  
  .comment-item {
	display: flex;
	align-items: flex-start;
	margin-bottom: 20rpx;
  }
  
  .comment-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 20rpx;
	object-fit: cover;
  }
  
  .comment-info {
	flex: 1;
  }
  
  .comment-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10rpx;
  }
  
  .comment-username {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
  }
  
  .comment-time {
	font-size: 24rpx;
	color: #999;
  }
  
  .comment-content {
	font-size: 28rpx;
	color: #666;
	line-height: 1.6;
  }