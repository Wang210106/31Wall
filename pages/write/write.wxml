<view class="container">
<!-- 标题输入框 -->
<view class="input-wrapper">
    <input type="text" placeholder="请输入标题 （选填）" bindinput="onTitleInput" value="{{title}}" />
</view>

<!-- 内容输入框 -->
<view class="input-wrapper">
    <textarea maxlength="-1" placeholder="说说你想说的吧~" bindinput="onContentInput" value="{{content}}"></textarea>
</view>
  
  <!-- 图片/视频上传区域 -->
  <view class="upload-area">
    <block wx:for="{{mediaList}}" wx:key="*this">
      <view class="media-item" bindtap="previewMedia" data-index="{{index}}">
        <image src="{{item}}" mode="aspectFill" />
        <view class="delete-icon" bindtap="deleteMedia" data-index="{{index}}" wx:if="{{!isUpdating}}">
          <text>×</text>
        </view>
      </view>
    </block>
    <view class="add-icon" bindtap="chooseMedia">
      <text>+</text>
    </view>
  </view>

  <!-- 匿名/实名选择 -->
  <view class="option-wrapper">
    <radio-group bindchange="onRealnameChange">
      <label>
        <radio value="1" checked="{{isRealname == 1}}"/> 实名
      </label>
      <label>
        <radio value="0" checked="{{!(isRealname == 1)}}"/> 匿名
      </label>
    </radio-group>
  </view>

