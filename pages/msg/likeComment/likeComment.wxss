/* pages/msg/likeComment/likeComment.wxss */
.like-comment-container {
	padding: 20rpx;
	background-color: #f5f5f5;
  }
  
  .page-title {
	text-align: center;
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
  }
  
  .message-item {
	background-color: #ffffff;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
	position: relative;
	cursor: pointer;
  }
  
  .sender-info {
	display: flex;
	flex-direction: column; /* 改为垂直排列 */
	align-items: flex-start; /* 左对齐 */
	
  }
  
  .sender-avatar {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	margin-right: 10rpx;
	margin-bottom: 10rpx; /* 调整头像与用户名的间距 */
  }

  
  .sender-name {
	font-size: 32rpx;
	white-space: normal; /* 允许文本自动换行 */
    word-break: break-all; /* 允许在任意字符处换行 */
  }
  
  .send-time {
	position: absolute;
	top: 10rpx;
	right: 10rpx;
	font-size: 28rpx;
	color: #999;
  }

  .message-content {
	margin-top: 10rpx;
	color: #333;
	line-height: 1.4;
	white-space: normal; /* 允许文本自动换行 */
    word-break: break-all; /* 允许在任意字符处换行 */
	clear: both;
  }