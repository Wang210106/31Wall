.container{
    padding: 20rpx;
}

.avatar{
    position: absolute;
    width: 120rpx;
	height: 120rpx;
    border-radius: 12rpx;
    top: 50%;
    transform: translateY(-50%);
}
.item{
    position: relative;
    height: 220rpx;
    border-bottom: 1px solid rgb(223, 223, 223);
    margin: 10px;
}
.time{
    position: absolute;
    right: 0;
    top: 10rpx;
    color: #9e9e9e;
    font-size: 25rpx;
}
.textWrap{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 170rpx;
}
.sender,.text{
    margin: 15rpx 0;
}