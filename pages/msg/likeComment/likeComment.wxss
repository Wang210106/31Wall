/* pages/msg/likeComment/likeComment.wxss */
.like-comment-container {
	padding: 20rpx;
	background-color: #f5f5f5;
  }
  
  .page-title {
	text-align: center;
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
  }
  
  .message-item {
	background-color: #ffffff;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
	position: relative;
	cursor: pointer;
  }
  
  .sender-info {
	display: flex;
	align-items: center;
  }
  
  .sender-avatar {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	margin-right: 10rpx;
  }
  
  .sender-name {
	font-size: 32rpx;
  }
  
  .send-time {
	position: absolute;
	top: 10rpx;
	right: 10rpx;
	font-size: 28rpx;
	color: #999;
  }