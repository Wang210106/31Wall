@import "/static/wxss/msg.wxss";

.message-center {
	padding: 20rpx;
	background-color: #f5f5f5;
}
  
.message-type {
    display: flex;
    position: relative;
	align-items: center;
	background-color: #ffffff;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
	cursor: pointer;
}
  
.icon-wrapper {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}
  
.xiaoxi {
	transform: scale(1.5);
}
  
.badge {
	position: absolute;
	top: 0rpx;
	right: 15rpx;
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	background-color: RGB(250,81,81);
	color: white;
	font-size: 20rpx;
	text-align: center;
	line-height: 30rpx;
}
  
.type-name {
	font-size: 32rpx;
}

.rightIcon{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 50rpx;
    height: 30rpx;
    width: 30rpx;
}
