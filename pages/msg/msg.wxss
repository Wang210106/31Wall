.message-center {
	padding: 20rpx;
	background-color: #f5f5f5;
  }
  
  .message-type {
	display: flex;
	align-items: center;
	background-color: #ffffff;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
	cursor: pointer;
  }
  
  .icon-wrapper {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-right: 0rpx;
	position: relative;
  }
  
  .icon {
	width: 100rpx;
	height: 100rpx;
  }
  
  .system-icon {
    width: 100rpx;
    height: 50rpx;
	object-fit: contain;
	background-position: center;
}
  
  .update-icon {
    width: 100rpx;
    height: 50rpx;
    object-fit: contain;
}
  
  .like-comment-icon {
	width: 100rpx;
    height: 50rpx;
    object-fit: contain;
  }
  
  .badge {
	position: absolute;
	top: 0rpx;
	right: 15rpx;
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	background-color: red;
	color: white;
	font-size: 20rpx;
	text-align: center;
	line-height: 30rpx;
  }
  
  .type-name {
	font-size: 32rpx;
  }