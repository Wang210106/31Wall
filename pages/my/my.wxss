/* pages/my/my.wxss */
.info{
    display: flex;
    height: 300rpx;
    border-bottom: 0.5rpx solid rgb(231, 231, 231);
    background-color: rgb(245, 245, 245);
    align-items: center;
    justify-content: center;
}
.infoWrap{
    height: 160rpx;
    width: 100%;
    display: flex;
    justify-content: space-evenly;
}
.items{
    display: block;
}
.userInfo{
    display: flex;
    flex-direction: column;
    align-items: stretch;
}
.name{
    margin: 20rpx 0;
    font-size: 50rpx;
}
.class{
    font-size: 30rpx;
}
.headImage{
    display: block;
    border-radius: 15rpx;
    width: 160rpx;
    height: 160rpx;
}
.userItems,.sysItems{
    width: 100%;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
}
.userItems>view,.sysItems>view{
    background-color: rgb(245, 245, 245);
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border: 1px solid rgb(231, 231, 231);
}