@import "/static/wxss/iconfont.wxss";

.message-center {
    padding: 20rpx;
}
  
.wrap {
    display: flex;
    position: relative;
	align-items: center;
	background-color: #ffffff;
	border-radius: 10rpx;
	padding: 20rpx;
    margin-bottom: 20rpx;
    cursor: pointer;
}
  
.iconWrap {
	width: 100rpx;
	height: 100rpx;
	border-radius: 10rpx;
	display: flex;
	justify-content: center;
	align-items: center;
    position: relative;
    background-color: #f5f5f5;
}
  
.iconfont{
    transform: scale(1.5);
}
  
.badge {
	position: absolute;
	top: -10rpx;
	right: -10rpx;
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	background-color: RGB(250,81,81);
	color: white;
	font-size: 20rpx;
	text-align: center;
	line-height: 30rpx;
}
  
.text{
    font-size: 32rpx;
    padding-left: 20rpx;
}

.rightIcon{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 50rpx;
    height: 30rpx;
    width: 30rpx;
}