@import "/static/wxss/iconfont.wxss";

.message-center {
    padding: 20rpx;
}
  
.wrap {
    display: flex;
    position: relative;
	align-items: center;
	background-color: #ffffff;
	border-radius: 10rpx;
	padding: 20rpx;
    margin-bottom: 20rpx;
    cursor: pointer;
}

.textWrap{
    display: flex;
    flex-direction: column;
}
  
.iconWrap ,.iconImage{
	width: 100rpx;
	height: 100rpx;
	border-radius: 10rpx;
	display: flex;
	justify-content: center;
	align-items: center;
    position: relative;
    background-color: #f5f5f5;
}
  
.iconfont{
    transform: scale(1.5);
}
  
.title,.text{
    padding-left: 50rpx;
}

.title{
    font-size: 34rpx;
}

.text{
    padding-top: 15rpx;
    font-size: 24rpx;
    color: #a1a1a1;
}

.rightIcon{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 50rpx;
    height: 30rpx;
    width: 30rpx;
}